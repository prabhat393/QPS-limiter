package main

import (
	"context"
	"fmt"
	"log"
	"net/http"
	"okapi-public-api/lib/env"
	"os"
	"time"

	"github.com/go-redis/redis/v8"
)

const serverPort = 8080
const group = "group_1"
const user = "test_user"

func main() {
	if err := env.Init(); err != nil {
		log.Panic(err)
	}
	fmt.Println("Staring test with ::")
	fmt.Println("Overall allowed requests :", env.GroupLimit)
	fmt.Println("Query per second limit: ", env.QPSLimitPerGroup[group])
	log.SetFlags(0)

	logFile, err := setLogger(fmt.Sprintf("%dreqs.log", env.GroupLimit))
	if err != nil {
		log.Panic(err)
	}
	defer logFile.Close()
	log.SetOutput(logFile)

	cfg := &redis.Options{
		Addr: "localhost:6379",
	}
	cmd := redis.NewClient(cfg)

	ctx := context.Background()

	counter := 0

	if err = cmd.Del(ctx, fmt.Sprintf("limit:%s:%s:count", group, user)).Err(); err != nil {
		log.Print(err)
	}
	if err = cmd.Del(ctx, fmt.Sprintf("limit:qps_%s:%s:count", group, user)).Err(); err != nil {
		log.Print(err)
	}

	requestURL := fmt.Sprintf("http://localhost:%d/v1/pages/1", serverPort)
	req, err := http.NewRequestWithContext(ctx, http.MethodGet, requestURL, nil)
	if err != nil {
		log.Printf("client: could not create request: %s\n", err)
		os.Exit(1)
	}

	log.Println("Overall allowed requests :", env.GroupLimit)
	log.Println("Query per second limit: ", env.QPSLimitPerGroup[group])

	log.Println("==================================================")
	log.Println("------------------- Positive tests -----------------")

	// Overall request limit per group
	for i := 0; i < env.GroupLimit/env.QPSLimitPerGroup[group]; i++ {

		// QPS limit
		for j := 0; j < env.QPSLimitPerGroup[group]; j++ {
			counter++
			res, err := http.DefaultClient.Do(req)

			if err != nil {
				log.Printf("error making http request %d : %s\n", counter, err)
				os.Exit(1)
			}
			if res.StatusCode != 200 {
				log.Printf("Error: status code of request %d : \t\t\t%d\n", counter, res.StatusCode)
			} else {
				log.Printf("Status code of request %d : \t\t\t%d\n", counter, res.StatusCode)
			}
			rc, err := cmd.Get(ctx, fmt.Sprintf("limit:%s:%s:count", group, user)).Int()
			if err != nil {
				log.Println(err)
			}
			log.Printf("Overall request count in Redis : \t%d\n", rc)
			if rc != counter {
				log.Println("Error: Request count not represented in redis")
			}

			qps, err := cmd.Get(ctx, fmt.Sprintf("limit:qps_%s:%s:count", group, user)).Int()
			if err != nil {
				log.Println(err)
			}
			log.Printf("QPS count in Redis : \t\t\t\t%d\n", qps)
			if qps != j+1 {
				log.Println("Error: QPS count incorrect in redis")
			}
			log.Println(" ")

		}

		log.Println("============================\nWaiting 1 sec to avoid qps limit.....")
		time.Sleep(1 * time.Second)
	}

	log.Println("\n----------Negative test: overall req limit reached -------------")
	for k := 0; k < env.QPSLimitPerGroup[group]; k++ {
		counter++
		res, err := http.DefaultClient.Do(req)

		if err != nil {
			log.Printf("error making http request %d : %s\n", counter, err)
			os.Exit(1)
		}

		if res.StatusCode != 429 {
			log.Printf("Error: status code of request %d : \t\t\t%d\n", counter, res.StatusCode)
		} else {
			log.Printf("Status code of request %d : \t\t\t%d\n", counter, res.StatusCode)
		}
		rc, err := cmd.Get(ctx, fmt.Sprintf("limit:%s:%s:count", group, user)).Int()
		if err != nil {
			log.Println(err)
		}
		log.Printf("Overall request count in Redis : \t%d\n", rc)

		if rc != env.GroupLimit {
			log.Println("Error: Request count not correct in redis")
		}

		qps, err := cmd.Get(ctx, fmt.Sprintf("limit:qps_%s:%s:count", group, user)).Int()
		if err != nil {
			log.Println(err)
		}
		log.Printf("QPS count in Redis : \t\t\t\t%d\n", qps)

		if qps != k+1 {
			log.Println("Error: QPS count incorrect in redis")
		}
		log.Println(" ")
	}

	log.Println("\n----------Negative test: QPS limit reached -------------")
	log.Println("Setting back overlimit req count.")

	log.Printf("Sending %d req/sec.....\n", (env.QPSLimitPerGroup[group] + 5))
	if err = cmd.DecrBy(ctx, fmt.Sprintf("limit:%s:%s:count", group, user), int64(env.QPSLimitPerGroup[group]+5)).Err(); err != nil {
		log.Println(err)
	}
	for k := 0; k < (env.QPSLimitPerGroup[group] + 5); k++ {
		counter++
		res, err := http.DefaultClient.Do(req)

		if err != nil {
			log.Printf("error making http request %d : %s\n", counter, err)
			os.Exit(1)
		}

		if res.StatusCode != 429 {
			log.Printf("Error: status code of request %d : \t\t\t%d\n", counter, res.StatusCode)
		} else {
			log.Printf("Status code of request %d : \t\t\t%d\n", counter, res.StatusCode)
		}
		rc, err := cmd.Get(ctx, fmt.Sprintf("limit:%s:%s:count", group, user)).Int()
		if err != nil {
			log.Println(err)
		}
		log.Printf("Overall request count in Redis : \t%d\n", rc)

		if rc != (env.GroupLimit - (env.QPSLimitPerGroup[group] + 5)) {
			log.Println("Error: Request count not correct in redis")
		}

		qps, err := cmd.Get(ctx, fmt.Sprintf("limit:qps_%s:%s:count", group, user)).Int()
		if err != nil {
			log.Println(err)
		}
		log.Printf("QPS count in Redis : \t\t\t%d\n", qps)

		if qps != env.QPSLimitPerGroup[group] {
			log.Println("Error: QPS count incorrect in redis")
		}
		log.Println(" ")

	}
}

func setLogger(filename string) (*os.File, error) {
	path, err := os.Getwd()
	if err != nil {
		return nil, err
	}
	filepath := fmt.Sprintf("%s/test/pttl/%s", path, filename)
	if !fileExists(filepath) {
		createFile(filepath)
	} else {
		if err := os.Remove(filepath); err != nil {
			log.Printf("error removing file: %v", err)
			return nil, err
		}
	}
	f, err := os.OpenFile(filepath, os.O_RDWR|os.O_CREATE|os.O_APPEND, 0666)
	if err != nil {
		log.Printf("error opening file: %v", err)
		return nil, err
	}
	return f, nil
}

func fileExists(name string) bool {
	if _, err := os.Stat(name); err != nil {
		if os.IsNotExist(err) {
			return false
		}
	}
	return true
}

func createFile(name string) error {
	fo, err := os.Create(name)
	if err != nil {
		return err
	}
	defer func() {
		fo.Close()
	}()
	return nil
}
